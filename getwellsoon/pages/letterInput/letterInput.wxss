@import "../../../private/shared/common/common.wxss";
.page{
    background: #000000 center center /cover url("https://www.korjo.cn/xcx/tyx_play_getwellsoon/letterInput_bg.jpg") fixed no-repeat;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
}
.letterFrame{
    width: 80%;
    height: 74%;
    padding: 80rpx 0rpx 100rpx 0;
    background: url('https://www.korjo.cn/xcx/tyx_play_getwellsoon/letterPage.png');
    background-size: 100% 100%;
    margin:40rpx auto;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    position: relative;
}
.bow{
    width: 40%;
    position: absolute;
    left: 0;
    top: 0;
    transform: translate(-12%,-5%);
}
.letter_flower{
    width: 34%;
    position: absolute;
    right: 0;
    bottom: 3%;
    z-index: 1;
}
.letterLogo{
    width: 80%;
}
.letterLogo image{
    width: 100%;
}
.letterInfo{
    width: 70%;
    height: 100%;
    display: flex;
    flex-shrink: 1;
    flex-direction: column;
    justify-content: space-between;
}
.letterReceive{
    display: flex;
    align-items: center;
}
.letterReceive image{
    width: 50rpx;
}
.letterReceive input{
    width: 150rpx;
    height: 50rpx;
    border-bottom: 2rpx solid #a0ba5c;
    margin-left: 10rpx;
    color: #5a7d00;
}
.letterInput{
    width: 100%;
    height: 100rpx;
    margin: 20rpx 0;
    flex-grow: 1;
}
.letterInput textarea{
    width: 100%;
    height: 100%;
    border: 4rpx solid #a0ba5c;
    padding: 20rpx 10rpx;
    font-size: 36rpx;
    line-height: 1;
    color: #5a7d00;
    box-sizing: border-box;
}
.letterSend{
    display: flex;
    justify-content: flex-end;
}
.letterSend input{
    width: 150rpx;
    height: 50rpx;
    border-bottom: 2rpx solid #a0ba5c;
    text-align: right;
    color: #5a7d00;
}
.input_text_receive{
    color:#a0ba5c;
    font-size: 26rpx;
    padding-left: 10rpx;
}
.input_text_input{
    color: #c1c7bb;
    font-size: 20rpx;
    padding: 0rpx 0;
}
.input_text_send{
    color: #a0ba5c;
    font-size: 26rpx;
    text-align: right;
    transform: translateX(-13rpx);
}
.QRcode{
    width: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
    position: relative;
}
.QRcode button::after{display:none}
.makeQRcode{
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    width: 30%;
    height: 100%;
    background-color: transparent;
    color: #ffffff;
    border:none;
    font-size: 30rpx;
    z-index: 12;
}
.makeQRcodeImg{
    width: 30%;
}
.demo{
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: 1;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.mongolia{
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    position: absolute;
    left: 0;
    top: 0;
}
.loading{
    width: 64%;
    position: relative;
    transform: translateY(-5%);
}
.loading_image{
    width: 100%;
}
.choiceTea{
    position: absolute;
    left: 50%;
    top: 60%;
    transform: translate(-50%,-42%);
    width: 100%;
    height: 40%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}
.choiceTea_image{
    width: 40%;
    height: auto;
}
.drinkTheTea{
    color: #ffcb00;
    padding: 16rpx 36rpx;
    font-size: 28rpx;
    border:4rpx solid #ffcb00;
    border-radius: 28rpx;
    line-height: 1;
}