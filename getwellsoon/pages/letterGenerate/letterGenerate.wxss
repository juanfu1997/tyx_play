.letterFrame{
    width: 80%;
    height: 74%;
    padding: 80rpx 0rpx 100rpx 0;
    background: url('https://www.korjo.cn/xcx/tyx_play_getwellsoon/letterPage.png');
    background-size: 100% 100%;
    margin-top:40rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
}
.letterLogo{
    width: 80%;
}
.letterLogo image{
    width: 100%;
}
.letterInfo{
    width: 70%;
    height: 100%;
    display: flex;
    flex-shrink: 1;
    flex-direction: column;
    justify-content: space-between;
}
.letterReceive{
    display: flex;
    align-items: center;
}
.letterReceive image{
    width: 50rpx;
}
.letterReceive input{
    width: 150rpx;
    height: 50rpx;
    border-bottom: 2rpx solid #a0ba5c;
    margin-left: 10rpx;
    color: #5a7d00;
}
.letterInput{
    width: 100%;
    height: 100rpx;
    margin: 40rpx 0;
    flex-grow: 1;
}
.letterInput_text{
    width: 100%;
    height: 52rpx;
    /*padding: 20rpx 10rpx;*/
    font-size: 36rpx;
    line-height: 36rpx;
    color: #5a7d00;
    box-sizing: border-box;
    border-bottom: 2rpx solid #a0ba5c;
}
.letterInput textarea{
    width: 100%;
    height: 100%;
    border: 2rpx solid #a0ba5c;
    padding: 20rpx 10rpx;
    font-size: 20rpx;
    color: #5a7d00;
    box-sizing: border-box;
    text-decoration: underline;
    line-height: 40rpx;
}
.letterSend{
    display: flex;
    justify-content: flex-end;
}
.letterSend input{
    width: 150rpx;
    height: 50rpx;
    border-bottom: 2rpx solid #a0ba5c;
    text-align: right;
    color: #5a7d00;
}
.input_text_receive{
    color:#a0ba5c;
    font-size: 26rpx;
    padding-left: 10rpx;
}
.input_text_input{
    color: #f7c0cc;
    font-size: 20rpx;
    padding: 0rpx 0;
}
.input_text_send{
    color: #a0ba5c;
    font-size: 26rpx;
    text-align: right;
    transform: translateX(-13rpx);
}
.tips{
    width: 100%;
    font-size: 30rpx;
    color: #fff;
    flex-grow: 1;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.more{
    width: 100%;
    background-color: rgba(160,186,92,.4);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    color: #ffffff;
}
