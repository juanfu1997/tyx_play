@import "../../../private/shared/common/common.wxss";
.page {
	background-color: #f9f9f9;
}

.bar {
    background-color: #ffffff;
    color: #000;
}

.list {
    padding-top: 30rpx;
}

.list .wrapper {
    background-color: #fff;
    margin-bottom: 20rpx;
}

.list .wrapper .li {
    font-size: 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 40rpx;
    border-bottom: 1px solid #f4f4f4;
    border-top: 1px solid #f4f4f4;
}

.list .wrapper .li .subtitle {
    position: relative;
    line-height: 40rpx;
}

.list .wrapper .li .subtitle .hint-cirle {
    display: inline-block;
    margin-left: 5px;
    background-color: red;
    color: #fff;
    font-size: 28rpx;
    width: 40rpx;
    height: 40rpx;
    box-sizing: padding-box;
    border-radius: 50%;
    text-align: center;
}

.list .wrapper .li .subtitle .hint-cirle.big {
    width: auto;
    height: auto;
    padding: 6rpx;
}

/* ***箭头*** */
.arrow-right {
    display: inline-block;
    vertical-align: middle;
    text-align: right;
}

.arrow-right text {
    width: 16rpx;
    height: 16rpx;
    border-width: 2px 2px 0 0;
    border-color: #bdbdbd;
    border-style: solid;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
    display: inline-block;
}