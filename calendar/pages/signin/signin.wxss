@import "../../../private/shared/common/common.wxss";
page {
	background: #f4c21d;
	text-align: center;
}

.page {
	display: flex;
	flex-direction: column;
}

.bar {
	color: #000;
}

.sign_info {
	position: relative;
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: center;
}

.sign_info .title {
	width: 62%;
	margin: 0 auto;
}

.sign_info .level {
	color: #fff;
	font-size: 28rpx;
	padding-top: 20rpx;
}

.sign_info .goPrizes {
	position: absolute;
	top: 20rpx;
	right: 30rpx;
	font-size: 28rpx;
	border: 1px solid #000;
	line-height: 2;
	width: 165rpx;
	border-radius: 25rpx;
}

.sign_info .h3 {
	font-size: 30rpx;
	padding-top: 26rpx;
}

.sign_info .mark_days {
	display: flex;
	flex-direction: column;
	justify-content: center;
	color: #fff;
	margin: 30rpx auto 0;
	width: 340rpx;
	height: 340rpx;
	background: center center /contain url(https://www.korjo.cn/xcx/tyx_luckyImg/black_circle.png) no-repeat;
}

.sign_info .mark_info {
	font-size: 30rpx;
	line-height: 1;
}

.sign_info .mark_info .big {
	font-size: 180rpx;
}

.sign_info .mark_info .highlight {
	color: #f4c21d;
	line-height: 1.7;
}

/* ***签到天展示*** */
.show_days {
	position: relative;
	margin: 30rpx;
}

.show_days .days{
	display: flex;
	justify-content: space-between;
}

.show_days .line {
	position: absolute;
	z-index: -1;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	background-color: #000000;
	height: 20rpx;
	width: 96%;
}

.show_days .days .day .circle {
	position: relative;
	background-color: #000000;
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
	display: flex;
	justify-content: center;
	align-items: center;
}

.show_days .days .day .circle .icon {
	width: 58%;
}

.show_days .days .day .circle .icon.smile {
	width: 65%;
}

.show_days .days .day .circle .num {
	position: absolute;
	color: #000;
	font-size: 25rpx;
	bottom: -10rpx;
	left: 0;
	width: 100%;
	transform: translateY(120%);
}


/* ***签到规则*** */

.container {
	position: relative;
}

.container .bg{
	width: 100%;
}

.container .wrapper {
	position: absolute;
	top: 0;
	left: 0;
	height: 100%;
	width: 100%;
}

.container .wrapper .h1{
    padding: 50rpx 0 20rpx;
    font-size: 30rpx;
    line-height: 1;
}

.container .wrapper .rule {
	margin: 0 7%;
	font-size: 26rpx;
	color: #5e5e5e;
	line-height: 1.8;
	text-align: left;
	background-color: #fff;
}

/*弹窗*/

.lightbox.resultbox {
    display: flex;
    flex-direction: column;
    padding-top: 35%;
}

.lightbox .close {
    margin: 0 auto;
    width: 90rpx;
}

.lightbox .prize {
    position: relative;
    display: inline-block;
}

.lightbox .prize .medal {
    margin: 0 auto;
    width: 450rpx;
}

.lightbox .prize .desc {
    position: absolute;
    width: 450rpx;
    top: 0;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
}

.lightbox .prize .desc .stars {
    width: 30%;
    margin: 70rpx auto 40rpx;
}

.lightbox .prize .desc .text {
    font-size: 30rpx;
    line-height: 1.5;
}


.lightbox .prize .desc .text {
	font-size: 30rpx;
}

.lightbox .prize .desc .text .highlight {
	color: #ffc40b;
}