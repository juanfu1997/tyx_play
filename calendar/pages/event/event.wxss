@import "../../../private/shared/common/common.wxss";
.page {
	padding: 30rpx;
}

.bar {
	color: #000;
	background-color: #f9f9f9;
}

.list {
	position: relative;
	padding: 20rpx 0 10rpx;
	border-bottom: 1px solid #cfcfcf;
}

.list .title-wrapper {
	font-size: 26rpx;
	color: #626262;
	line-height: 1;
	margin-bottom: 15rpx;
}

.list .title-wrapper text {
	display: inline-block;
	vertical-align: middle;
}

.list .title-wrapper .icon {
	width: 35rpx;
	display: inline-block;
	vertical-align: middle;
	margin-right: 10rpx;
}

.list .inputContainer input {
	font-size: 30rpx;
	padding-left: 10rpx;
}

.list picker{
	display: inline-block;
	width: 46%;  
    line-height: 1;    
    font-size: 30rpx;
    background: center right/20rpx auto url("https://www.korjo.cn/xcx/courseImg/triangle_b.png") no-repeat;    
}

.list picker.first {
    width: 26%;
    background-position: center right 50%;
}

.list picker.second {
    width: 22%;
    background-position: center right;   
}

.list.alarm {
	padding-top: 30rpx;
}

.list.alarm .title-wrapper {
	font-size: 30rpx;
}

.list .more {
    font-size: 24rpx;
    color:#626262;
    margin: 10rpx 0;
}

.switch {
    position: absolute;
    top: 30rpx;
    right: 0;
    margin: 0;
    padding: 0;
    border: none;
    height: 46rpx;
    width: 90rpx;
    border-radius: 35rpx;
    color: #6b7381;
    background: #bdc1c8;
}

.switch.on {
    background-color: #eabc27;
    transition: background-color 0.25s;
}

.switch .handle {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: 2rpx;
    width: 42rpx;
    height: 42rpx;
    border-radius: 50%;
    background: #fff;
    transition: left .25s;
}

.switch.on .handle {
    left: 46rpx;
    transition: left .25s;
}

.event-footer {
	position: relative;
	width: 458rpx;
	margin: 30rpx auto;
}

.event-footer .button{
	width: 360rpx;
	border-radius: 8rpx;
	color: #eabc27;
	background-color: #000;
	border: none;
	height: 100%;
	line-height: 1;
	position: absolute;
	top: 0;
	left: 0;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 30rpx;
}

.event-footer .cancel {
	float: right;
	width: 86rpx;
}

