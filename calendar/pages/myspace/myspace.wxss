@import "../../../private/shared/common/common.wxss";
.bar {
    background-color: #f4c21d;
    color: #000;
}

.header {
    position: relative;
}

.header .bg {
    width: 100%;
}

.header .hd {
    width: 70%;
    position: absolute;
    left: 50%;
    bottom: 0;
    transform: translate(-50%, 32%);
}

.header .hd .card {
    width: 100%;
}

.header .hd .user-info {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: center;
}

.header .hd .user-info .avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin: 0 20rpx 0 15%;
}

.header .hd .user-info text{
    color: #fff;
    font-size: 26rpx;
}

.header .hd .user-info .vip {
    font-size: 25rpx;
    color: #f4c21d;
    line-height: 1.5;
}

.header .hd .user-info .expiration {
    font-size: 23rpx;
    color: #f4c21d;
}

.list {
    font-size: 26rpx;
    margin: 110rpx auto 40rpx;
    width: 90%;
    border-radius: 30rpx;
    box-shadow: 0 0 6px 0 rgba(0, 0, 0, .2);
    background-color: #fff;
    padding: 10rpx;
}

.list .wrapper {
    background-color: #fff;
}

.list .wrapper .li {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24rpx 30rpx;
    border-bottom: 1px solid #d6d6d6;
}

.list .wrapper:last-of-type .li {
    border-bottom: none;
    padding-bottom: 14rpx;
}

.list .wrapper .li .subtitle {
    position: relative;
    line-height: 40rpx;
}

.list .wrapper .li .subtitle .hint-cirle {
    display: inline-block;
    margin-left: 5px;
    background-color: red;
    color: #fff;
    font-size: 28rpx;
    width: 40rpx;
    height: 40rpx;
    box-sizing: padding-box;
    border-radius: 50%;
    text-align: center;
}

.list .wrapper .li .subtitle .hint-cirle.big {
    width: auto;
    height: auto;
    padding: 6rpx;
}

.long-btn {
    font-size: 26rpx;
    text-align: center;
    padding: 30rpx;
    width: 90%;
    margin: 0 auto;
    border-radius: 12rpx;
    box-shadow: 0 0 6px 0 rgba(0, 0, 0, .2);
}

/* ***箭头*** */
.arrow-right {
    display: inline-block;
    vertical-align: middle;
    text-align: right;
    color: #bdbdbd;
}

.arrow-right text {
    width: 16rpx;
    height: 16rpx;
    border-width: 2px 2px 0 0;
    border-color: #bdbdbd;
    border-style: solid;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
    display: inline-block;
}