/* ***导航栏*** */

.bar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    color: #fff;
    font-size: 30rpx;
    z-index: 2;
}

.bar.dark {
    color: #000;
}

.bar .title {
    position: absolute;
    width: 100%;
    left: 0;
    bottom: 20%;
    text-align: center;
}

.bar .arrow-left {
    position: absolute;
    z-index: 3;
    left: 20rpx;
    bottom: 20%;
    width: 40rpx;
    padding: 0 15rpx;
}