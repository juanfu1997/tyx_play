/* ***alert box*** */
.lightbox .alertbox {
    position: absolute;
    bottom: 30%;
    left: 50%;
    transform: translateX(-50%);
    background-color: #fff;
    width: 80%;
    box-shadow: 0 2px 6px 0 rgba(0, 0, 0, 0.2);
    border-radius: 20rpx;
}

.lightbox .alertbox .pic {
    margin: 20rpx auto;
    width: 200rpx;
    height: 200rpx;
}

.lightbox .alertbox .alertTitle {
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
    background-color: #f4c21d;
    text-align: center;
    line-height: 3;
}

.lightbox .alertbox .date {
    background-color: #f7f7f7;
    text-align: center;
    line-height: 3;
}

.lightbox .alertbox .info .item{
    border-bottom: 1px solid #e4e4e4;
    padding: 20rpx;
    font-size: 30rpx;
}

.lightbox .alertbox .info .item:last-of-type {
    border-bottom: none;
}

.lightbox .alertbox .h2 {
    font-size: 35rpx;
    text-align: center;
    color: #f5c11d;
    margin-bottom: 20rpx;
}

.lightbox .alertbox .p {
    padding: 0 30rpx;
    line-height: 1.5;
    text-align: center;
    font-size: 33rpx;
    color: #626262;
}

.lightbox .alertbox .btns {
    margin-top: 50rpx;
    padding: 30rpx;
    display: flex;
    justify-content: flex-end;
    width: 100%;
    background-color: #f7f7f7;
    border-bottom-left-radius: 20rpx;
    border-bottom-right-radius: 20rpx;
}

.lightbox .alertbox .btns .btn {
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    width: 200rpx;
    font-size: 32rpx;
    color: #626262;
}

.lightbox .alertbox .btns .important{
    margin: 0;
    margin-left: 5px;
    border-radius: 10rpx;
    color: #f5c11d;
    border: none;
    background-color: #040001;
}