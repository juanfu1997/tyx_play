/*动画效果  */

@keyframes slideOutLeft {
    from {
        transform: translate3d(0, 0, 0);
        visibility: visible;
        opacity: 1;
    }

    to {
        transform: translate3d(-100%, 0, 0);
        opacity: 0;
    }
}

.slideOutLeft {
    animation-name: slideOutLeft;
    animation-duration: 2s;
}

@keyframes slideInRight {
    from {
        transform: translate3d(100%, 0, 0);
        visibility: visible;
        opacity: 0;
    }

    to {
        transform: translate3d(0, 0, 0);
        opacity: 1;
    }
}

.slideInRight {
    animation-name: slideInRight;
    animation-duration: 2s;
}

@keyframes rotate180 {
    from {
        transform: rotateY(0);
        visibility: visible;
    }

    to {
        transform: rotateY(180deg);
    }
}

.rotate180 {
    animation-name: rotate180;
    animation-duration: 1.5s;
    transform: rotateY(180deg);
}

@keyframes rotate0 {
    from {
        transform: rotateY(180deg);
        visibility: visible;
    }

    to {
        transform: rotateY(360);
    }
}

.rotate0 {
    animation-name: rotate0;
    animation-duration: 1.5s;
    transform: rotateY(360deg);
}

@keyframes markDown {
    from {
        transform: perspective(400px) translate3d(0, 0, 150px) rotate(25deg);
        -webkit-transform: perspective(400px) translate3d(0, 0, 150px) rotate(25deg);
        animation-timing-function: ease-out;
        -webkit-animation-timing-function: ease-out;
        visibility: hidden;
    }
    /* 40% {
    transform: perspective(400px) translate3d(0, 0, 150px) rotate(90deg);
    animation-timing-function: ease-out;
    } */

    30% {
        transform: perspective(400px) translate3d(0, 0, 150px) rotate(25deg);
        -webkit-transform: perspective(400px) translate3d(0, 0, 150px) rotate(25deg);
        animation-timing-function: ease-in;
        -webkit-animation-timing-function: ease-in;
        visibility: hidden;
    }

    50%{
        visibility: hidden;
    }

    70% {
        transform: perspective(400px) rotate(25deg);
        -webkit-transform: perspective(400px) rotate(25deg);
        animation-timing-function: ease-in;
        -webkit-animation-timing-function: ease-in;
        visibility: visible;
    }

    to {
        transform: perspective(400px) rotate(25deg);
        -webkit-transform: perspective(400px) rotate(25deg);
        animation-timing-function: ease-in;
        -webkit-animation-timing-function: ease-in;
        visibility: visible;
    }
}

@-webkit-keyframes markDown {
    from {
        transform: perspective(400px) translate3d(0, 0, 150px) rotate(25deg);
        -webkit-transform: perspective(400px) translate3d(0, 0, 150px) rotate(25deg);
        animation-timing-function: ease-out;
        -webkit-animation-timing-function: ease-out;
        visibility: hidden;
    }

    30% {
        transform: perspective(400px) translate3d(0, 0, 150px) rotate(25deg);
        -webkit-transform: perspective(400px) translate3d(0, 0, 150px) rotate(25deg);
        animation-timing-function: ease-in;
        -webkit-animation-timing-function: ease-in;
        visibility: hidden;
    }

    50%{
        visibility: hidden;
    }

    70% {
        transform: perspective(400px) rotate(25deg);
        -webkit-transform: perspective(400px) rotate(25deg);
        animation-timing-function: ease-in;
        -webkit-animation-timing-function: ease-in;
        visibility: visible;
    }

    to {
        transform: perspective(400px) rotate(25deg);
        -webkit-transform: perspective(400px) rotate(25deg);
        animation-timing-function: ease-in;
        -webkit-animation-timing-function: ease-in;
        visibility: visible;
    }
}
.markDown {
    animation-name: markDown;
    animation-duration: 4s;

    -webkit-animation-name: markDown;
    -webkit-animation-duration: 4s;
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

.fadeIn {
    animation-name: fadeIn;
    animation-duration: 2s;
}

@keyframes waved{
    from {
        opacity: 0;
        
    }

    to {
        opacity: 1;
    }
}
