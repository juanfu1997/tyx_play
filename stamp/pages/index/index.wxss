/**index.wxss**/
page {
    height: 100%;
    width: 100%;
}
.page{
    width: 100%;
    height: 100%;
    background-image: url('http://www.korjo.cn/xcx/poststamp/index_bg.jpg');
    background-size: 100% 100%;
    overflow: hidden;
}
.container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    background: no-repeat;

}
.logoAndSlogan {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.logoAndSlogan image{
    width: 58%;
}
.logoAndSlogan text{
    color: white;
    font-size: 40rpx;
}
#icon_k {
    width: 66%;
    margin-bottom: 100rpx;
}

.startBtn{
    width: 360rpx;
    height: 80rpx;
    line-height: 78rpx;
    position: absolute;
    bottom: 50rpx;
    color: white;
    background: rgba(0, 0, 0, 0.5);
    border: 2rpx solid rgb(50, 70, 30);
    border-radius: 30rpx;
}
.startBtn::after{
    border: none;
}
.startBtnHover{
    background: rgba(0, 0, 0, 0.8);
}


.ufo {
   -webkit-animation-name: fly;
           animation-name: fly;
   -webkit-animation-duration: 3s;
           animation-duration: 3s;
   -webkit-animation-timing-function: linear;
           animation-timing-function: linear;
   -webkit-animation-iteration-count: infinite;
           animation-iteration-count: infinite;
   width: 20%;
   position: absolute;
   right: 2%;
   top: 30%;
}

@-webkit-keyframes fly {
  0%{
    -webkit-transform: translate(0);
            transform: translate(0);
  }
  25% {
    -webkit-transform: translate(10rpx, 20rpx);
            transform: translate(10rpx, 20rpx);
  }
  50% {
    -webkit-transform: translate(20rpx, 10rpx);
            transform: translate(20rpx, 10rpx);
  }
  75% {
    -webkit-transform: translate(10rpx, 10rpx);
            transform: translate(10rpx, 10rpx);
  }
}
@keyframes fly {
  0%{
    -webkit-transform: translate(0);
            transform: translate(0);
  }
  25% {
    -webkit-transform: translate(10rpx, 20rpx);
            transform: translate(10rpx, 20rpx);
  }
  50% {
    -webkit-transform: translate(20rpx, 10rpx);
            transform: translate(20rpx, 10rpx);
  }
  75% {
    -webkit-transform: translate(10rpx, 10rpx);
            transform: translate(10rpx, 10rpx);
  }
}