/* pages/show/show.wxss */
@import '../../utils/animation.wxss';
@import "../../../private/shared/common/common.wxss";
@import '../../private/shared/bar/bar.wxss';
page{
    width: 100%;
    height:0%;
}
view{
    display: block;
    box-sizing: content-box;
}
image{
    width:320px;
    height:240px;
    display:inline-block;
    overflow:hidden;
}
.outContainer{
    width: 100%;
    height: 100%;
    font-family: "Microsoft YaHei", "Helvetica Neue", Helvetica, STHeiTi, sans-serif;
}
.container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    transform-origin: 0 0;
    box-sizing: border-box;
    font-family: "Microsoft YaHei", "Helvetica Neue", Helvetica, STHeiTi, sans-serif;
}


.operate{
    height: 100%;
    width: 12%;
}

.op{
    width: 100%;
    height: 150rpx;
    font-size: 24rpx;
    text-align: center;
}

.op text{
    display: inline-block;
    width: 86%;
    left: 7%;
}

.op1{
    margin-top: 50rpx;
    margin-bottom: 100rpx;
}

.op2{
    margin-bottom: 150rpx;
}

.content{
    height: 700rpx;
    width: 84%;
    padding: 23rpx 2% ;
}

.gc{
    height: 100%;
    width: 100%;
}

.foregroundContent{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    border: 2rpx solid #7d6565;
    background-color: #eee8dd;
}

.left{
    width: 49%;
    height: 100%;
}

.left .postcodeBox{
    height: 65rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}

.left .postcodeBox .postcode{
    width: 60rpx;
    height: 60rpx;
    line-height: 58rpx;
    text-align: center;
    border: 1rpx solid #7d6565;
    color:#7d6565;
    font-size: 50rpx;
    margin-right: 10rpx;
}

.imageBox{
    width: 100%;
    height: 490rpx;
    margin-top: 50rpx;
}

.center{
    width: 2%;
    height: 100%;
}

.center image{
    width: 1rpx;
    height: 485rpx;
    margin-top: 100rpx;
    margin-left: 0.5rpx;
}

.right{
    width: 49%;
    height: 100%;
}

.right .stampBox{
    height: 200rpx;
    width: 100%;
    /* background: saddlebrown; */
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}

.right .mailContent{
    height: 300rpx;
    width: 90%;
    /* width=277rpx */
    padding-left: 5%;
    padding-right: 5%;
}

.right .mailContent text{
    display: inline-block;
    line-height: 51rpx;
    height: 300rpx;
    word-break: break-all;
}

.right .logoBox{
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    width: 95%;
    padding-right: 5%;
}

.right .logoBox .logo{
    width: 40%;
}

#postcard_logo{
    position: absolute;
    width: 150rpx;
    top: 80rpx;
    left: 49%;
}
#postcard_logo_0{
    position: absolute;
    width: 150rpx;
    top: 0rpx;
    left: 380rpx;
}

.backgroundContent image{
    height: 100%;
    width: 100%;
}

.cover{
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 10;
}
.cover image{
    width:180rpx;
    margin-top: 320rpx;
    margin-left:285rpx;
    margin-bottom: 10rpx;
}
.cover text{
    color:white;
    font-size:30rpx;
    display: inline-block;
    text-align: center;
    line-height: 40rpx;
}


