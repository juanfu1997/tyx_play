/* pages/sample/sample.wxss */
@import '../../utils/animation.wxss';
@import "../../../private/shared/common/common.wxss";
@import '../../private/shared/bar/bar.wxss';
page{
    width: 100%;
    /*height:100%;*/
}
.page{
    background-image: url('http://www.korjo.cn/xcx/poststamp/makePostcard_bg.jpg');
    background-size: 100% 100%;
    background-color: rgb(239, 226, 203);
    background-repeat: no-repeat;
    overflow: hidden;
}
.container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    box-sizing: border-box;
    font-family: "Microsoft YaHei", "Helvetica Neue", Helvetica, STHeiTi, sans-serif;
    overflow: hidden;
    line-height: 1;
}


.location{
    margin-top: 90rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

/*.location image{
    width: 70rpx;
}*/
.location text{
    display: flex;
    align-items:flex-end;
    padding-bottom:10rpx;
    font-size: 45rpx;
    font-weight: bold;
    color: rgb(249, 82, 30);
}

.arrow{
    width: 30rpx;
    padding-bottom:10rpx;
}

.postBgBox,.postContentBox{
    width: 450rpx;
    height: 310rpx;
    background-color: white;
    margin: 50rpx auto 0 auto;
}
.postBgBox image,.postContentBox image{
    width: 420rpx;
    height: 280rpx;
    margin: 15rpx;
}


.startBtn{
    width: 400rpx;
    height: 80rpx;
    line-height: 72rpx;
    color: #9d8986;
    background-color: #efe9de;
    margin-top: 50rpx;
    border: 4rpx dashed #9d8986;
    border-radius: 35rpx;
}
.startBtn::after{
    border: none;
}
.startBtnHover{
    background-color: #d1cbc0;
}