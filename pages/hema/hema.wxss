@import "../../private/shared/common/common.wxss";
.page {
	background: #262260 center center /cover url("https://www.korjo.cn/xcx/tyx_playImg/bg_hema3.jpg") fixed no-repeat;
}

.title-wrapper .titlePic {
	margin: 40rpx auto;
	width: 45%;
}

.frame {
	margin: 0 auto;
	width: 70%;
	position: relative;
}

.frame-bg {
	width: 100%;
	transform: rotate(7deg);
}

.container {
	z-index: 3;
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
}

.container .frame-pic {
	width: 100%;
}

.container .photo {
	z-index: -1;
	position: absolute;
	top: 1%;
	left: 1%;
	bottom: 1%;
	right: 1%;
	background: rgb(42,42,42) center center /cover url("https://www.korjo.cn/xcx/tyx_playImg/default.jpg") no-repeat;
}

.container .upload-btn {
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	width: 230rpx;
	height: 230rpx;
}

.container .upload-btn .upload-icon {
	width: 100%;
}

.container .dec1 {
	position: absolute;
	width: 35%;
	top: 30rpx;
	left: -40rpx;
}

.container .dec2 {
	position: absolute;
	width: 11%;
	top: 30rpx;
	right: 20rpx;
}

.container .dec3 {
	position: absolute;
	width: 11%;
	bottom: 30rpx;
	left: 15rpx;
}

.container .dec-wrapper {
	position: absolute;
	width: 100%;
	left: 0;
	bottom: 0;
}

.container .dec-wrapper  .dec4-wrapper {
	margin-bottom: 20rpx;
}

.container .dec-wrapper  .dec4-wrapper .dec4 {
	width: 22%;
	float: right;
	transform: translateX(15%);	
}

.container .dec-wrapper .dec5-wrapper {
	transform: translateX(9%);	
}

.container .dec-wrapper  .dec5 {
	width: 16%;
	float: right;
	margin-top: 2px;
}

.container .dec-wrapper .dec6 {
	width: 65%;
	float: right;
	margin-bottom: 40rpx;
	margin-left: 10rpx;
}

.downloader {
	text-align: center;
	font-size: 30rpx;
	padding: 25rpx 0;
	color: #fff;
}

.btn-wrapper {
	position: relative;
	margin: 80rpx auto;
	width: 70%;
}

.btn-wrapper .btn {
	position: relative;
	width: 100%;
	z-index: 2;
}

.btn-wrapper .btn-bg {
	z-index: 1;
	position: absolute;
	top: 6rpx;
	bottom: 6rpx;
	left: 1%;
	right: 1%;
	background-color: rgba(6,5,37, .8);
}

.footer-wrapper {
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
	padding: 0 60rpx;
	background-color: rgba(6,5,37, .8);
	display: flex;
	align-items: center;
	height: 140rpx;
}

.footer-wrapper .caption {
	width: 440rpx;
}

.footer-wrapper .arrow-wrapper {
	flex: 1;
	display: flex;
	align-items: center;
	justify-content: flex-end;
}

.footer-wrapper .arrow-wrapper .arrow {
	width: 45rpx;
}

.footer-wrapper .arrow-wrapper .inter {
	color: #eabc27;
	font-size: 36rpx;
	padding-left: 15rpx;
}
